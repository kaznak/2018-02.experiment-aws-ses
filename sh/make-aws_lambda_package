#!/bin/bash

# set -vx
set -Cue

based=$(dirname $0)/..
pname=$(basename $0)
stime=$(date +%Y%m%d%H%M%S%Z)

msg(){
    echo "$pname $stime $(date +%Y%m%d%H%M%S%Z) $@"	>&2
}

tmp=/tmp/$pname.$stime.$$
if ! mkdir $tmp ; then
    msg ERROR can not make temporally directory.
    exit 1
fi
trap 'rm -rf $tmp' EXIT

################################################################
lambdad=$based/lambda
pkgd=$based/pkg

mkdir -p $lambdad $pkgd

################################################################

ls -d $lambdad/*	|
    while read d ; do
	[ -d "$d" ] && echo $d
    done		|
    while read d ; do
	name=$(basename $d)
	tmppkgd=$tmp/$name
	
	mkdir -p $tmppkgd
	
	find $d -type f -name '*.py'	|
	    xargs -I% cp -p % $tmppkgd

	{
	    pushd $tmppkgd
	    zip $name.zip *.py
	    popd
	}
	mv $tmppkgd/$name.zip $pkgd
    done 

################################################################
exit 0
